{% block genemu_captcha_widget %}
{% spaceless %}
    {% if position == "left" %}
        <img src="{{ src }}" width="{{ width }}" height="{{ height }}" title="{{ name|trans }}" />
        {{ block("field_widget") }}
    {% else %}
        {{ block("field_widget") }}
        <img src="{{ src }}" width="{{ width }}" height="{{ height }}" title="{{ name|trans }}" />
    {% endif %}
{% endspaceless %}
{% endblock genemu_captcha_widget %}

{% block genemu_recaptcha_widget %}
{% spaceless %}
    <div id="{{ id }}_div" style="display: none;"></div>
    <noscript>
        <iframe src="{{ server }}/noscript?k={{ public_key }}" width="500" height="300" frameborder="0"></iframe>
        <br />
        <textarea name="recaptcha_challenge_field" rows="3" cols="40"></textarea>
        <input type="hidden" name="recaptcha_response_field" value="manual_challenge" />
    </noscript>
{% endspaceless %}
{% endblock genemu_recaptcha_widget %}

{% block genemu_jquerydate_widget %}
{% spaceless %}
    {% if widget == "single_text" %}
        {{ block("field_widget") }}
    {% else %}
        <div {{ block("widget_container_attributes") }}>
            {{ date_pattern|replace({
                "{{ year }}":  form_widget(form.year),
                "{{ month }}": form_widget(form.month),
                "{{ day }}":   form_widget(form.day),
            })|raw }}

            {% set attr = attr|merge({"size": 10}) %}
            {% set id = "datepicker_" ~ id %}
            {% set full_name = "datepicker_" ~ full_name %}
            {{ block("hidden_widget") }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock genemu_jquerydate_widget %}

{% block genemu_jqueryslider_widget %}
{% spaceless %}
    {{ block("hidden_widget") }}
    <div id="{{ id }}_slider"></div>
{% endspaceless %}
{% endblock genemu_jqueryslider_widget %}

{% block genemu_jqueryautocompleter_widget %}
{% spaceless %}
    {{ block("hidden_widget") }}

    {% set id = "autocompleter_" ~ id %}
    {% set full_name = "autocompleter_" ~ full_name %}
    {% set value = autocompleter_value %}
    {{ block("field_widget") }}
{% endspaceless %}
{% endblock genemu_jqueryautocompleter_widget %}

{% block genemu_jquerychosen_widget %}
{% spaceless %}
    {% set attr = attr|merge({
        "data-placeholder": (attr.placeholder | default(empty_value)),
        "class": (attr.class | default('') ~ " chzn-select")
    }) %}
    {{ block("choice_widget") }}
    <script type="text/javascript">
    	genemuFormBundleChosenFunc_{{ id }} = {% spaceless %}{{ json_transform_func | raw }}{% endspaceless %}
    	
	    genemuFormBundleChosenConfigs_{{ id }}=new Array();

	    genemuFormBundleChosenConfigs_{{ id }}['empty_value']='{{ empty_value }}';
	    genemuFormBundleChosenConfigs_{{ id }}['allow_single_deselect']={{ allow_single_deselect ? 'true' : 'false' }};
	    {% if route_name %}
	    	genemuFormBundleChosenConfigs_{{ id }}['path_route_name']='{{ path(route_name) }}';
	    {% endif %}
	    genemuFormBundleChosenConfigs_{{ id }}['json_transform_func']=genemuFormBundleChosenFunc_{{ id }};
	    genemuFormBundleChosenConfigs_{{ id }}['typing_timeout']='{{ typing_timeout }}';
	    genemuFormBundleChosenConfigs_{{ id }}['query_param_name']='{{ query_param_name }}';
    </script>
{% endspaceless %}
{% endblock genemu_jquerychosen_widget %}

{% block genemu_jquerygeolocation_widget %}
{% spaceless %}
    {{ form_rest(form) }}

    {% if map is sameas(true) %}
        <div id="{{ id }}_map">&nbsp;</div>
    {% endif %}
{% endspaceless %}
{% endblock genemu_jquerygeolocation_widget %}

{% block genemu_jqueryfile_widget %}
{% spaceless %}
    {{ block("hidden_widget") }}
    <div class="queue">
        <div id="{{ id }}_queue"></div>
    </div>
    <script type="text/javascript">
	    var config = {{ configs|merge({
	        'uploader':  asset(configs.uploader),
	        'cancelImg': asset(configs.cancelImg),
	        'script':    path(configs.script),
	        'queueID':   id ~ '_queue'
	    })|json_encode|raw }};

		genemuFormBundleFileConfigs_{{ id }}=new Array(config, {% if configs.auto is not defined or configs.auto is sameas(false) %}true{% else %}false{% endif %});
    </script>
{% endspaceless %}
{% endblock genemu_jqueryfile_widget %}

{% block genemu_jquerycolor_widget %}
{% spaceless %}
    {% if widget == "image" %}
        {{ block("hidden_widget") }}
        {% set id = id ~ "_color" %}
        <div {{ block("widget_container_attributes") }}>
            <div{% if value %} style="background-color: #{{ value }};"{% endif %}>&nbsp;</div>
        </div>
    {% else %}
        {{ block("field_widget") }}
    {% endif %}
{% endspaceless %}
{% endblock genemu_jquerycolor_widget %}

{% block genemu_jqueryrating_widget %}
{% spaceless %}
    {% if expanded %}
        <div {{ block("widget_container_attributes") }}>
        {% for child in form %}
            {{ form_widget(child) }}
        {% endfor %}
        </div>
    {% else %}
        {{ block("choice_widget") }}
    {% endif %}
{% endspaceless %}
{% endblock genemu_jqueryrating_widget %}

{% block genemu_jqueryimage_widget %}
{% spaceless %}
    <div id="image_{{ id }}_container" class="genemu_jqueryimage"
        data-settings="{{ configs|merge(
            {
                'id': id,
                'assetfolder': asset(configs.folder),
                'uploader':  asset(configs.uploader),
                'cancelImg': asset(configs.cancelImg),
                'script':    path(configs.script),
                'genemu_form_image': path('genemu_form_image')
            })|json_encode }}"
        data-filters="{{ filters|json_encode }}"
        data-thumbnails="{{ thumbnails|json_encode }}"
        data-thumbnail="{{ (thumbnail is defined ? thumbnail : {})|json_encode }}"
        data-selected="{{ (selected is defined ? selected : "") }}"
        data-value="{{ (value is defined ? value : 0) }}"
        data-width="{{ (width is defined ? width : 0) }}"
        data-height="{{ (height is defined ? height : 0) }}"
        >
        <div class="left">
            <div id="image_{{ id }}_preview" class="preview">
                {% set type = "hidden" %}
                {{ block("hidden_widget") }}

                <a id="image_{{ id }}_overlay" class="overlay" href="#">&nbsp;</a>
                <span id="image_{{ id }}_remove" class="remove">&nbsp;</span>

                {% set asset = asset("bundles/genemuform/images/default.png") %}
                {% set width = 96 %}
                {% set height = 96 %}

                <img id="image_{{ id }}_img_preview" class="img_preview" src="{{ asset }}" width="{{ width }}" height="{{ height }}" />

                <ul id="image_{{ id }}_options" class="options">
                    {% for filter in filters %}
                    <li class="{{ filter }} change"></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="queue">
                <div id="image_{{ id }}_queue"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function() {
            $('#image_{{ id }}_container').trigger('create');
        });
    </script>
{% endspaceless %}
{% endblock genemu_jqueryimage_widget %}

{% block genemu_jquerytokeninput_widget %}
{% spaceless %}
{{ block("hidden_widget") }}

{% set id = "tokeninput_" ~ id %}
{% set full_name = "tokeninput_" ~ full_name %}
{% set value = tokeninput_value %}
{{ block("field_widget") }}
{% endspaceless %}
{% endblock genemu_jquerytokeninput_widget %}

{% block genemu_plain_widget %}
    <div {{ block('widget_container_attributes') }}>
        {% set id = "plain_" ~ id %}
        <p {{ block('widget_attributes') }}>{{ (value|escape) | default("<em class=\"default_value\">" ~ (empty_value|escape) ~ "</em>")|raw }}</p>
    </div>
{% endblock %}

{% block genemu_subform_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
        {% set id = "subform_" ~ id %}
        {{ block('form_widget') }}
    </div>
{% endspaceless %}
{% endblock %}

{% block genemu_jqueryjstree_widget %}
{% spaceless %}
{% set class = attr.class | default('') %}
{% set attr = attr|merge({
        "class": (class ~ " genemu_jqueryjstree")
    }) %}
{{ block("hidden_widget") }}
{% set attr = attr|merge({
        "class": (class ~ " genemu_jqueryjstree_widget"),
        "data-settings": config|merge({
            'list':  path(config.list),
            'search':  path(config.search),
            'themes': asset(config.themes)
        })|json_encode|raw
    }) %}

{% set id = "jstree_" ~ id %}
    <div {{ block('widget_container_attributes') }}>
    </div>
{% endspaceless %}
{% endblock genemu_jqueryjstree_widget %}
